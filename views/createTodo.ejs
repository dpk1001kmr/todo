<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Todo | <%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <!-- SunEditor CSS -->
  <link href="https://cdn.jsdelivr.net/npm/suneditor@latest/dist/css/suneditor.min.css" rel="stylesheet">
  <!-- SunEditor JS -->
  <script src="https://cdn.jsdelivr.net/npm/suneditor@latest/dist/suneditor.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/suneditor@latest/src/lang/en.js"></script>
</head>

<body>
  <%- include('./partials/_nav') %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <form action="/createTodo" method="POST" class="mt-2">
          <div class="mb-3">
            <label class="form-label small mb-1">Title</label>
            <input type="text" class="form-control" name="title">
          </div>
          <div class="mb-3">
            <label class="form-label small mb-1">Description</label>
            <textarea id="editor" class="form-control" name="description"></textarea>
          </div>
          <a href="/getAllTodos" class="btn btn-sm border border-light-subtle">Cancel</a>
          <button type="submit" class="btn btn-sm border border-light-subtle">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const editor = SUNEDITOR.create('editor', {
        height: 300,
        buttonList: [
          ['bold', 'italic', 'underline', 'strike'],
          ['font', 'fontSize', 'formatBlock'],
          ['align', 'list', 'table'],
          ['image', 'link', 'video'],
          ['undo', 'redo']
        ]
      });
      document.querySelector("form").addEventListener("submit", function() {
        document.querySelector("#editor").value = editor.getContents(); // âœ… Ensures SunEditor data is submitted
      });
    });
  </script>
</body>

</html>