<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Todo | <%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
</head>

<body>
  <%- include('./partials/_nav') %>
  <% if (typeof success_msg !== "undefined" && success_msg.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show rounded-0" role="alert">
    <%= success_msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <%# CREATE TODO PAGE LINK %>
        <p class="my-4">
          <a href="/createTodo" class="text-primary fw-bold">Create todo &rarr;</a>
        </p>

        <% if (totalTodos === 0) { %>
        <p class="my-4">
          There is no task...
        </p>
        <% } %>

        <% if (totalTodos > 0) { %>
        <%# SHOW TODO LIST %>
        <% todos.forEach(todo => { %>
        <p class="mb-1">
          <a href="/getTodo/<%= todo._id %>" class="text-primary"><%= todo.title %></a>
        </p>
        <% }) %>

        <% } %>

        <!-- âœ… Pagination -->
        <% if (totalTodos > 0) { %>
        <nav class="my-4">
          <ul class="pagination">
            <!-- Previous Page -->
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
              <a class="page-link" href="/getAllTodos?page=<%= currentPage - 1 %>">&laquo;</a>
            </li>

            <!-- Page Numbers -->
            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link" href="/getAllTodos?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>

            <!-- Next Page -->
            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="/getAllTodos?page=<%= currentPage + 1 %>">&raquo;</a>
            </li>
          </ul>
        </nav>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>